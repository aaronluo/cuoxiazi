<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.devMode" value="false" />
	<constant name="struts.locale" value="en_UTF-8" />
	<constant name="struts.i18n.encoding" value="UTF-8" />
	<constant name="struts.custom.i18n.resources" value="globalMessages" />

	<package name="struts-base" namespace="/struts" extends="struts-default">
		<!-- <result-types> </result-types> -->

		<interceptors>
			<interceptor name="loggerInterceptor"
				class="com.innovaee.eorder.web.interceptor.LoggerInterceptor" />

			<interceptor-stack name="eorderStack">
				<interceptor-ref name="loggerInterceptor" />
				<interceptor-ref name="defaultStack" />
			</interceptor-stack>

			<interceptor-stack name="tokenStack">
				<interceptor-ref name="token" />
				<interceptor-ref name="eorderStack" />
			</interceptor-stack>
		</interceptors>

		<default-interceptor-ref name="eorderStack" />

		<global-results>
			<result name="exception">/pages/global/exception.jsp</result>
		</global-results>

		<global-exception-mappings>
			<exception-mapping exception="java.lang.Exception" result="exception" />
		</global-exception-mappings>
	</package>

	<package name="home" namespace="/" extends="struts-default">
		<default-action-ref name="index" />
		<action name="index">
			<result name="success">/index.jsp </result>
		</action>
	</package>

	<!-- Add packages here -->
	<include file="com/innovaee/eorder/web/action/login/struts.xml" />

	<include file="com/innovaee/eorder/web/action/admin/function/struts.xml" />
	<include file="com/innovaee/eorder/web/action/admin/user/struts.xml" />
	<include file="com/innovaee/eorder/web/action/admin/role/struts.xml" />
</struts>